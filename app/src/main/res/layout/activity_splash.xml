<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashActivity">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="291dp"
        android:layout_height="294dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="99dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="@+id/imageView16"
        app:layout_constraintStart_toStartOf="@+id/imageView16"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

    <TextView
        android:id="@+id/textView19"
        style="@style/Widget.ProductivityApp.Body1"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/app_description"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/imageView17"
        app:layout_constraintStart_toStartOf="@+id/imageView17"
        app:layout_constraintTop_toBottomOf="@+id/imageView17" />

    <Button
        android:id="@+id/containedButton"
        style="@style/Widget.ProductivityApp.Button"
        android:layout_width="304dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:stateListAnimator="@null"
        android:textSize="16sp"
        android:fontFamily="@font/hindsiliguri_semibold"
        android:text="Login"
        android:letterSpacing="0"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/textView19"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        style="@style/Widget.ProductivityApp.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sign Up"
        android:textColor="@color/secondaryColor"
        app:layout_constraintEnd_toEndOf="@+id/containedButton"
        app:layout_constraintStart_toStartOf="@+id/containedButton"
        app:layout_constraintTop_toBottomOf="@+id/containedButton" />


</androidx.constraintlayout.widget.ConstraintLayout>